<% layout("/layouts/boilerPlate") %>

<div class="container mt-5">

    <!-- Title -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold"><%= listing.title %></h1>
    </div>

    <!-- Listing Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="max-height: 400px; object-fit: cover;">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <% if (listing.owner && listing.owner.username) { %>
                            <p><i>Owned by <b><%= listing.owner.username %></b></i></p>
                        <% } else { %>
                            <p><i>Owner information not available</i></p>
                        <% } %>
                        <li class="list-group-item"><strong>Description:</strong> <%= listing.description %></li>
                        <li class="list-group-item"><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></li>
                        <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
                        <li class="list-group-item"><strong>Country:</strong> <%= listing.country %></li>
                    </ul>
                </div> 
                <% if(currUser && listing.owner && listing.owner._id && listing.owner._id.equals(currUser._id)) {%> 
                <div class="card-footer bg-white d-flex justify-content-between">
                    <a href="/listing/<%= listing._id %>/edit" class="btn btn-warning">Edit Listing</a>
                    <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')">Delete Listing</button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
    </div>



    <!-- Leave a Review -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Leave a Review</h4>
                    <% if(currUser)  {%>
                </div>
                <div class="card-body">
                    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <fieldset class="starability-slot">
                                <legend>First rating:</legend>
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comments</label>
                            <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                            <div class="invalid-feedback">Please add a comment for the review.</div>
                        </div>
                        <button type="submit" class="btn btn-dark">Submit Review</button>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- All Reviews -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <h3 class="mb-4">All Reviews</h3>
            <% if (listing.reviews.length === 0) { %>
                <p class="text-muted">No reviews yet. Be the first to leave one!</p>
            <% } %>
            <div class="row">
                <% for (let i = 0; i < listing.reviews.length; i++) {
                    const review = listing.reviews[i];
                %>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                            <% if (review.author && review.author.username) { %>
                                <h5><b>User:</b> <%= review.author.username %></h5>
                            <% } else { %>
                                <h5><b>User:</b> Unknown User</h5>
                            <% } %>
                        </div>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="px-3 pb-3">
                            <button class="btn btn-sm btn-danger">DELETE</button>
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

</div>



    



